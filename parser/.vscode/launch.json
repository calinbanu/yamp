{
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "-m",
                    "../compiler_info/0/zephyr.map"
                ],
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "error"
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=parser",
                    "--",
                    "--test-threads",
                    "1"
                ],
                "filter": {
                    "name": "parser",
                    "kind": "lib"
                }
            },
            // "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "error"
            },
        }
    ]
}