{
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug CLI",
            "cargo": {
                "args": [
                    "build",
                ],
            },
            "env": {
                "RUST_LOG": "error"
            },
            "program": "target/debug/parser",
            "args": [
                "--mapfile",
                "./compiler_info/0/zephyr.map"
            ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug section tests",
            "cargo": {
                "args": [
                    "test",
                    "--test",
                    "section-tests",
                    "--",
                    "--nocapture",
                    "--test-threads",
                    "1"
                ],
                "filter": {
                    "name": "section-tests",
                    "kind": "test"
                }
            },
            // "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "error"
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug subsection tests",
            "cargo": {
                "args": [
                    "test",
                    "--test",
                    "subsection-tests",
                    "--",
                    "--nocapture",
                    "--test-threads",
                    "1"
                ],
                "filter": {
                    "name": "subsection-tests",
                    "kind": "test"
                }
            },
            // "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "error"
            },
        }
    ]
}